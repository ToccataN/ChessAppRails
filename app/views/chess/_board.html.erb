
<% @arr.each_with_index do |i, j | %>
  <% @arr[j].each_with_index do |c, s| %>
   <% letter = ('a'..'h').to_a %>
   <% number = (1..8).to_a %>
   <% pos = [j, s] %>
   <% int = "#{letter[j]}#{number[s]}" %>
   <%  c[:color] == 0 ? view = int : view = image_tag("#{c[:color]}#{c[:name]}.png") %>
   <% if j % 2 === 0 %>
     <%=  s%2 === 1 ? content_tag("div", view , class:  %w(square-r), data:  {val: pos})  : content_tag( "div", view, class: %w(square-b), data:  {val: pos} ) %>
   <% else %>
     <%=  s%2 === 0 ?  content_tag("div", view, class:  %w(square-r), data:  {val: pos} ) : content_tag("div", view, class: %w(square-b),  data:  {val: pos} ) %>
   <% end %>
  <% end %>
<% end %>

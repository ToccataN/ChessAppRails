<div class ="container">
<div class="row">
<div class = "cpuname col-md-4">
<h3>Enemy:  </h3>
<h4><%= tag.div(@cpu, class: %w(name)) %></h4>
</div>
</div>
<div class ="row">
<div class ="playername col-md-4">
  <h3>Challenger:  </h3>
<h4><%= tag.div(@player, class: %w(name)) %></h4>

</div>
</div>
</div>
<div id = 'backboard'>

<%= render 'chess/board' %>

</div>

<div class="turns container" style="overflow-y: scroll; height: 300px">
  <div class="row">
<div class ="col-md-4 ">
  <h1> Turn: </h1>
  <h4><%= @counter %></h4>
  <h2> Moves: </h2>
  <% @moves.to_a.reverse.each do |key, value| %>
    <h6> <%= key %>:  <%= value %></h6>
  <% end %>
</div>
</div>
</div>

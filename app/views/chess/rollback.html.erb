<div class="divMain">

  <div class ="container-fluid">
    <div class="row">
      <div class = "cpu-name col-md-4">
        <h3>Enemy:  </h3>
        <h4><%= tag.div(@cpu[:name], class: %w(name)) %></h4>
      </div>
    </div>
    <div class ="row">
      <div class ="player-name col-md-4">
        <h3>Challenger:  </h3>
        <h4><%= tag.div(@player[:name], class: %w(name)) %></h4>
      </div>
    </div>
  </div>
  <div id = 'backboard'>

    <%= render 'chess/board' %>

  </div>

  <div class="turns container-fluid" >
    <div class="row turn-center">
      <div class ="col-md-4 left-turn">
        <h1> Turn: </h1>
      </div>
      <div class="col-md-4 right-turn ">
        <h4><%= @counter %></h4>
      </div>
    </div>
    <div class="row move-contain " style="overflow-y: scroll; height: 300px" >
      <div class="col-md-4 left-turn">
        <h2> Moves: </h2>
      </div>
      <div class="col-md-4 right-turn text-left">
        <% @moves.to_a.reverse.each do |key, value| %>
           <h6> <%= key %>:  <%= value %></h6>
        <% end %>
      </div>
    </div>
  </div>

<%= button_to "rollback", {:controller => "chess", :action => "rollback"} %>
</div>
